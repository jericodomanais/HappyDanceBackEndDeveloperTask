@page
@model IndexModel
@inject IJobService _jobService
@{
    ViewData["Title"] = "Home page";
    var jobs = await _jobService.GetAllJobs();
}

<div class="text-center">
    <h1 class="display-4">Jobs</h1>
</div>

<div class="container mt-5 pt-4">
    <div class="row">
        @foreach (var job in jobs)
        {
            <div class="col-lg-4 col-md-6 col-12 mt-4 pt-2">
                <div class="card border-0 bg-light rounded shadow">
                    <div class="card-body p-4">
                        <h5>@job.Title</h5>
                        <div class="mt-3">
                            <span class="text-muted d-block"><strong>Job ID:</strong> @job.Id</span>
                            <span class="text-muted d-block"><strong>Date:</strong> @job.Date.ToString("MMM dd, yyyy")</span>
                            <span class="text-muted d-block"><strong>Location:</strong> @job.Location</span>
                            <span class="text-muted d-block"><strong>Department:</strong> @job.Department</span>
                            <span class="text-muted d-block"><strong>Open to Remote:</strong> @job.OpenToRemote</span>
                            <span class="text-muted d-block"><strong>Pay Rate Type:</strong> @job.PayRateType</span>
                            <span class="text-muted d-block"><strong>Job Description:</strong> @job.Description.Truncate()</span>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
